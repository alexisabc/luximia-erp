# ============================================================================
# Production Environment Variables
# Copy this file to .env.prod and fill in your values
# ============================================================================

# Database Configuration
POSTGRES_DB=system_erp_db
POSTGRES_USER=system_erp_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Django Configuration
SECRET_KEY=CHANGE_ME_DJANGO_SECRET_KEY
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Domain Configuration (for Caddy)
DOMAIN=your-domain.com
ACME_EMAIL=admin@your-domain.com

# GitHub Container Registry
GITHUB_REPOSITORY=your-org/sistema-erp
IMAGE_TAG=latest

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Fiscal Configuration
FISCAL_SANDBOX_MODE=False
FISCAL_PAC_PROVIDER=your-pac-provider

# Security
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Logging
LOG_LEVEL=INFO
