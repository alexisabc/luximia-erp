# =============================================================================
# SYSTEM ERP - PLANTILLA MAESTRA DE CONFIGURACIÓN
# =============================================================================
# GUÍA DE USO:
# 1. LOCAL: Copia la sección "GLOBAL" + "DESARROLLO LOCAL" a tu archivo .env
# 2. PROD:  Usa la sección "GLOBAL" + "PRODUCCIÓN" distribuyendo las variables
#           según la etiqueta [BACKEND] o [FRONTEND].

# =============================================================================
# 1. CONFIGURACIÓN GLOBAL (COMÚN)
# =============================================================================
# [BACKEND + FRONTEND]
NEXT_PUBLIC_APP_NAME="Sistema ERP"
NEXT_PUBLIC_COMPANY_NAME="Mi Empresa S.A. de C.V."
LOG_LEVEL=INFO

# [BACKEND] Seguridad Básica
SECRET_KEY=django-insecure-change-me-in-prod-2025-token
DJANGO_SETTINGS_MODULE=config.settings

# [BACKEND] Autenticación JWT
ACCESS_TOKEN_LIFETIME_MINUTES=60
REFRESH_TOKEN_LIFETIME_DAYS=7

# [BACKEND] Passkeys (WebAuthn)
RP_NAME="Sistema ERP"
PASSKEY_STRICT_UV=True

# [BACKEND] Inteligencia Artificial
# Requerido si usas funciones de IA/Vector
OPENAI_API_KEY=sk-proj-tu-clave-aqui


# =============================================================================
# 2. ENTORNO DE DESARROLLO LOCAL (Tu PC / Docker / WSL)
# =============================================================================
# [BACKEND] CORE
# DEVELOPMENT_MODE=True
# DEBUG=True
# ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,backend
# ROOT_DOMAIN=localhost

# [BACKEND] BASE DE DATOS (Mismo contenedor Docker maneja ambas DBs)
# POSTGRES_DB=system_erp_db
# POSTGRES_DB_SANDBOX=system_erp_db_sandbox
# POSTGRES_USER=system_erp_user
# POSTGRES_PASSWORD=system_erp_password
# POSTGRES_HOST=db
# POSTGRES_PORT=5432
# DATABASE_SSL_REQUIRE=False

# [BACKEND] CONFIGURACIÓN DE URLS
# FRONTEND_DOMAIN=localhost:3000
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
# RP_ID=localhost
# WEBAUTHN_ORIGIN=http://localhost:3000

# [FRONTEND] CONFIGURACIÓN DE API
# NEXT_PUBLIC_API_URL=http://localhost:8000/
# API_URL=http://backend:8000/

# [BACKEND] EMAILS LOCALES (MailHog)
# EMAIL_HOST=mailhog
# EMAIL_PORT=1025
# DEFAULT_FROM_EMAIL=desarrollo@localhost

# [BACKEND] SUPERUSUARIO AUTOMÁTICO (Seed)
# DJANGO_SUPERUSER_EMAIL=admin@localhost
# DJANGO_SUPERUSER_FIRST_NAME=Admin
# DJANGO_SUPERUSER_LAST_NAME=Local
# PGADMIN_EMAIL=admin@localhost
# PGADMIN_PASSWORD=admin


# =============================================================================
# 3. ENTORNO DE PRODUCCIÓN (tudominio.com)
# =============================================================================
# --- VARIABLES PARA EL SERVICIO DE BACKEND (Django) ---
# [BACKEND] Core
# DEVELOPMENT_MODE=False
# DEBUG=False
# ALLOWED_HOSTS=api.tudominio.com
# ROOT_DOMAIN=tudominio.com    <-- Importante para compartir cookies y subdominios

# [BACKEND] Base de Datos (Cloud Provided)
# DATABASE_URL=postgres://user:pass@host:port/system_erp_db
# DATABASE_URL_SANDBOX=postgres://user:pass@host:port/system_erp_db_sandbox
# DATABASE_SSL_REQUIRE=True

# [BACKEND] Seguridad y Conexión Frontend
# FRONTEND_DOMAIN=app.tudominio.com
# CORS_ALLOWED_ORIGINS=https://app.tudominio.com
# RP_ID=tudominio.com    <-- Dominio raíz para WebAuthn
# WEBAUTHN_ORIGIN=https://app.tudominio.com

# [BACKEND] Emails (Resend)
# EMAIL_BACKEND=config.emails.ResendEmailBackend
# RESEND_API_KEY=re_123456789...
# RESEND_FROM_EMAIL=notificaciones@tudominio.com
# DEFAULT_FROM_EMAIL=notificaciones@tudominio.com

# [BACKEND] Almacenamiento (Cloudflare R2 - Opcional)
# CLOUDFLARE_R2_ACCESS_KEY_ID=...
# CLOUDFLARE_R2_SECRET_ACCESS_KEY=...
# CLOUDFLARE_R2_BUCKET_NAME=erp-media
# CLOUDFLARE_R2_ENDPOINT_URL=https://<id>.r2.cloudflarestorage.com
# CLOUDFLARE_R2_REGION=auto

# --- VARIABLES PARA EL SERVICIO DE FRONTEND (Next.js) ---
# [FRONTEND] Conexión API
# NEXT_PUBLIC_API_URL=https://api.tudominio.com/
# API_URL=https://api.tudominio.com/  <-- Solo si usas Server Side Rendering
