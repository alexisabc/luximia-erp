# =============================================================================
# LUXIMIA ERP - ENVIRONMENT VARIABLES (LOCAL DEV)
# =============================================================================

# -----------------------------------------------------------------------------
# 1. CORE SYSTEM SETTINGS
# -----------------------------------------------------------------------------
DEVELOPMENT_MODE=True
DEBUG=True
SECRET_KEY=django-insecure-local-dev-key-change-in-production-luximia-erp-2025
DJANGO_SETTINGS_MODULE=config.settings
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# 2. DATABASE CONFIGURATION (PostgreSQL)
# -----------------------------------------------------------------------------
POSTGRES_DB=luximiadb
POSTGRES_USER=luximiauser
POSTGRES_PASSWORD=luximiapass
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_SSL_REQUIRE=False

# -----------------------------------------------------------------------------
# 3. BACKEND NETWORKING & SECURITY
# -----------------------------------------------------------------------------
ROOT_DOMAIN=
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,backend

# -----------------------------------------------------------------------------
# 4. FRONTEND & CORS CONFIGURATION
# -----------------------------------------------------------------------------
FRONTEND_DOMAIN=localhost:3000
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# -----------------------------------------------------------------------------
# 5. FRONTEND CONNECTIVITY (Next.js)
# -----------------------------------------------------------------------------
# Browser -> Backend
NEXT_PUBLIC_API_URL=http://localhost:8000/
# Next.js Server -> Backend (Internal Docker)
API_URL=http://backend:8000/

# -----------------------------------------------------------------------------
# 6. AUTHENTICATION & PASSKEYS (WebAuthn)
# -----------------------------------------------------------------------------
ACCESS_TOKEN_LIFETIME_MINUTES=60
REFRESH_TOKEN_LIFETIME_DAYS=7

# Critical for Passkeys to work in Localhost
RP_ID=localhost
WEBAUTHN_ORIGIN=http://localhost:3000
RP_NAME="Luximia ERP"
PASSKEY_STRICT_UV=True

# -----------------------------------------------------------------------------
# 7. EMAIL SETTINGS (MailHog)
# -----------------------------------------------------------------------------
EMAIL_HOST=mailhog
EMAIL_PORT=1025
DEFAULT_FROM_EMAIL=desarrollo@luximia.local

# -----------------------------------------------------------------------------
# 8. STORAGE & ASSETS
# -----------------------------------------------------------------------------
ASSETS_PATH=/app/static/assets
# R2/S3 - Leave empty for local filesystem storage
# Secure/Private storage for user media.
CLOUDFLARE_R2_ACCESS_KEY_ID=
CLOUDFLARE_R2_SECRET_ACCESS_KEY=
CLOUDFLARE_R2_BUCKET_NAME=
CLOUDFLARE_R2_ENDPOINT_URL=
CLOUDFLARE_R2_REGION=auto
CLOUDFLARE_R2_ADDRESSING_STYLE=virtual

# -----------------------------------------------------------------------------
# 9. EXTERNAL INTEGRATIONS
# -----------------------------------------------------------------------------
BANXICO_TOKEN=

# -----------------------------------------------------------------------------
# 10. LOCAL TOOLS & SUPERUSER
# -----------------------------------------------------------------------------
# PGAdmin Credentials
PGADMIN_EMAIL=admin@luximia.mx
PGADMIN_PASSWORD=admin

# Superuser Auto-Creation
DJANGO_SUPERUSER_EMAIL=admin@luximia.mx
DJANGO_SUPERUSER_FIRST_NAME=Administrador
DJANGO_SUPERUSER_LAST_NAME=Principal
