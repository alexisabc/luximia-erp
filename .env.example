# Archivo de Ejemplo de Variables de Entorno para Luximia ERP
# Copia este archivo, renombralo a .env y rellena los valores.

# Variables de la Base de Datos (valores por defecto para Docker)
DATABASE_URL=postgres://luximiauser:luximiapass@db:5432/luximiadb

# Secretos de Django (cambiar en producción real; en desarrollo se puede omitir)
SECRET_KEY=cambiame_por_una_clave_segura_y_larga
DEBUG=False

# Configuración del Entorno
DJANGO_SETTINGS_MODULE=luximia_erp.settings_prod
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://localhost:3000
DEVELOPMENT_MODE=True
ASSETS_PATH=/app/static/assets

# Credenciales del Superusuario (para creación inicial en desarrollo)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=cambiame_por_una_contraseña_fuerte

# Token para APIs externas
BANXICO_TOKEN=pega_aqui_tu_token_de_banxico
OPENAI_API_KEY=pega_aqui_tu_token_de_openai

# Configuración de JWT
ACCESS_TOKEN_LIFETIME_MINUTES=5
REFRESH_TOKEN_LIFETIME_DAYS=1

# Seguridad
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
CSRF_TRUSTED_ORIGINS=http://localhost:3000
CONTENT_SECURITY_POLICY="default-src 'self'"
PERMISSIONS_POLICY="geolocation=()"
LOG_LEVEL=INFO

